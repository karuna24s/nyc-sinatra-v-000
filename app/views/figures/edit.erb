<h1><%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br>
  <label>Edit the Title</label>
    <% Title.all.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><p>
    <% end %>
  <br>
  <label>Enter a Title:</label>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <label>Edit a Landmark</label>
    <% Landmark.all.each do |landmark| %>
    <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input></p>
    <% end %>
  <br>
  <label>Enter a New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <input type="submit" value="Edit Figure">
</form>
